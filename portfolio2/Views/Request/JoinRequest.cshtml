@model portfolio2.Models.Request

@{
    ViewData["Title"] = "JoinRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 makerequest">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <span class="anchor" id="formUserEdit"></span>
            <div class="card card-outline-secondary">
                <div class="card-header text-center">
                    <h3 class="mb-0">Join Request</h3>
                </div>
                <div class="card-body">
                    <form asp-action="JoinRequest" class="form" role="form" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row" hidden>
                            <label asp-for="RequestID" class="col-lg-3 col-form-label form-control-label">Description</label>
                            <div class="col-lg-9">
                                <textarea asp-for="RequestID" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="RequestID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DateRequest" class="col-lg-3 col-form-label form-control-label">Date of request</label>
                            <div class="col-lg-9">
                                <textarea asp-for="DateRequest" class="form-control" rows="4" readonly></textarea>
                                <span asp-validation-for="DateRequest" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description" class="col-lg-3 col-form-label form-control-label">Description</label>
                            <div class="col-lg-9">
                                <textarea asp-for="Description" class="form-control" rows="4" readonly></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Title" class="col-lg-3 col-form-label form-control-label">Title</label>
                            <div class="col-lg-9">
                                <input asp-for="Title" class="form-control" readonly />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="AvailabilityFrom" class="col-lg-3 col-form-label form-control-label">Availabile From</label>
                            <div class="col-lg-9">
                                <input asp-for="AvailabilityFrom" class="form-control" readonly/>
                                <span asp-validation-for="AvailabilityFrom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Hours" class="col-lg-3 col-form-label form-control-label">Hours</label>
                            <div class="col-lg-9">
                                <select asp-for="Hours" asp-items="@ViewData["Hourlist"] as List<SelectListItem>" readonly hidden class="form-control"></select>
                                <select asp-for="Hours" asp-items="@ViewData["Hourlist"] as List<SelectListItem>" readonly disabled class="form-control"></select>
                                <span asp-validation-for="Hours" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row" hidden>
                            <label asp-for="Status" class="col-lg-3 col-form-label form-control-label">Description</label>
                            <div class="col-lg-9">
                                <textarea asp-for="Status" class="form-control" readonly hidden rows="4"></textarea>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label aasp-for="LocationID" class="col-lg-3 col-form-label form-control-label">Location</label>
                            <div class="col-lg-9">
                                <select asp-for="LocationID" asp-items="@ViewData["Locationlist"] as List<SelectListItem>" readonly hidden class="form-control"></select>
                                <select asp-for="LocationID" asp-items="@ViewData["Locationlist"] as List<SelectListItem>" readonly disabled class="form-control"></select>
                                <span asp-validation-for="LocationID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="StudentID" class="col-lg-3 col-form-label form-control-label">Requester</label>
                            <div class="col-lg-9">
                                <textarea asp-for="StudentID" class="form-control" rows="4" readonly></textarea>
                                <span asp-validation-for="StudentID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label aasp-for="LocationID" class="col-lg-3 col-form-label form-control-label">Category</label>
                            <div class="col-lg-9">
                                <select asp-for="CategoryID" asp-items="@ViewData["Categorylist"] as List<SelectListItem>" readonly hidden class="form-control"></select>
                                <select asp-for="CategoryID" asp-items="@ViewData["Categorylist"] as List<SelectListItem>" readonly disabled class="form-control"></select>
                                </div><span asp-validation-for="CategoryID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                <input type="submit" class="btn btn-primary" value="Tutor request">
                                <input type="reset" class="btn btn-secondary" value="Reset">

                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>