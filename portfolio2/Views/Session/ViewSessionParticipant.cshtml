@{string studentnumber = ""; }
@foreach (var item in Model)
{
    studentnumber += item.StudentNumber + "@connect.np.edu.sg,";
}

<div class="table">
    <div class="container">
        <div class="card">
            <h4 class="card-header text-center">View Session Participant</h4>
            <div class="card-body">
                @if (Model.Count() > 1)
                {
                    <div class="text-center ">
                        <a href="https://teams.microsoft.com/l/chat/0/0?users=@studentnumber&topicName=@ViewData["SessionName"]" target="_blank" class="btn btn-dark btn-lg">Create a Group Chat in Teams</a>
                        </div>
                    <br />
                }
                <div class="table-responsive">
                    <table id="viewsessionparticipant" class="table table-striped table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Photo)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th> @Html.DisplayNameFor(model => model.Year)</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.Photo != "")
                                        {
                                            <img src="~/images/Profilepictures/@item.Photo" />
                                        }
                                        else
                                        {
                                            <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg">
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Student" asp-action="ProfileDetails" asp-route-id="@item.StudentNumber" target="_blank">@Html.DisplayFor(modelItem => item.Name)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Year)
                                    </td>
                                    <td>
                                        <a href="https://teams.microsoft.com/l/chat/0/0?users=@item.StudentNumber@@connect.np.edu.sg" target="_blank"><img src="~/images/Icons/teamslogo.png" /></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

