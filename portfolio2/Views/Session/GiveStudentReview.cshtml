<section>
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                @if (ViewData["ErrorMessage"] != null)
                {
                    <h2 class="text-danger">@ViewData["ErrorMessage"]</h2>
                }

                <table class="table table-striped table-light">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle" style="width: 70%">
                                    <a asp-controller="Student" asp-action="ProfileDetails" asp-route-id="@item.StudentNumber"><img src="~/images/Profilepictures/@item.Photo" class="img-fluid" style="width:70px;height:70px;margin-right:10px;"></a>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>

                                <td class="align-middle">
                                    <a asp-action="StudentReview" asp-route-id="@item.StudentID" class="btn btn-primary">Give Review</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Model.ToList().Count == 0)
                {
                    <a asp-action="MySession" class="btn btn-success">Return To My Session</a>
                }
                else
                {
                    <p class="text-danger">You can click this once you have done all the reviews for all the student!</p>
                    <a value="Return To My Session" class="btn btn-secondary disabled" role="button" aria-disabled="true">Return To My Session</a>

                }


            </div>
        </div>
    </div>
</section>
