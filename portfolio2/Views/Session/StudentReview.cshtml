<div class="container py-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <span class="anchor" id="formUserEdit"></span>
            <div class="card card-outline-secondary">
                <div class="card-header text-center">
                    <h3 class="mb-0">Review Student</h3>
                </div>
                <div class="card-body">
                    <form asp-action="StudentReview"  method="post" class="form" role="form" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label">Name</label>
                            <div class="col-lg-9">
                                <input disabled readonly value="@getlist.Name" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description" class="col-lg-3 col-form-label form-control-label">Description</label>
                            <div class="col-lg-9">
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Stars" class="col-lg-3 col-form-label form-control-label">Stars</label>
                            <div class="col-lg-9">
                                <select asp-for="Stars" asp-items="@ViewData["Stars"] as List<SelectListItem>" class="form-control"></select>
                                <span asp-validation-for="Stars" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <input asp-for="SessionID" readonly hidden class="form-control" value="@TempData["SessionID"]" />
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                <input type="submit" value="Post" class="btn btn-primary"/>
                                <a asp-controller="Session" asp-action="GiveStudentReview" asp-route-id="@TempData["SessionID"]" class="btn btn-secondary">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>