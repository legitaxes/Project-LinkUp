@model portfolio2.Models.Session

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>SessionPhoto</h4>
<hr />
@if (ViewData["Message"] != null)
{
    <h3 class="text-danger" style="text-align:center;">@ViewData["Message"]</h3>
    <h6 style="text-align:center;"><a asp-controller="Session" asp-action="Details" asp-route-id="@Model.SessionID">View The Sesion</a></h6>

}
else if (ViewData["Error"] != null)
{
    <h3 class="text-danger" style="text-align:center;">@ViewData["Error"]</h3>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="SessionID" class="form-control" hidden readonly />
            </div>
            <div class="form-group">
                <label asp-for="SessionDate" class="control-label"></label>
                <input asp-for="SessionDate" class="form-control" />
                @if (TempData["OutofDate"] != null)
                {
                    <span asp-validation-for="SessionDate" class="text-danger">@TempData["OutofDate"]</span>
                }
                else
                {
                    <span asp-validation-for="SessionDate" class="text-danger"></span>
                }
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <img src="~/images/Sessions/@Model.Photo" />
                <a class="btn btn-warning btn-sm" asp-controller="Session" asp-action="UploadSessionPhoto" asp-route-id="@Model.SessionID">Upload Session Photo</a>
                <input asp-for="Photo" hidden readonly />
            </div>
            <div class="form-group">
                <label asp-for="Hours" class="control-label"></label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Participants" class="form-control" hidden readonly />
            </div>
            <div class="form-group">
                <input asp-for="Points" class="form-control" hidden readonly />
            </div>
            <div class="form-group">
                <input asp-for="Status" class="form-control" hidden readonly />
            </div>
            <div class="form-group">
                <input asp-for="StudentID" class="form-control" hidden readonly />
            </div>
            <div class="form-group">
                <label asp-for="LocationID" class="control-label">Location</label>
                <select asp-for="LocationID" asp-items="@ViewData["LocationList"] as List<SelectListItem>" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label">Category</label>
                <select asp-for="CategoryID" asp-items="@ViewData["CategoryList"] as List<SelectListItem>" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

