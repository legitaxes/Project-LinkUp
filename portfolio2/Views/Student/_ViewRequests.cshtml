@model IEnumerable<portfolio2.Models.RequestViewModel>

<div class="table-responsive">
    <table id="viewRequests" class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Date requested</th>
                <th>Description</th>
                <th>Title</th>
                <th>Start time</th>
                <th>End time</th>
                <th>Points</th>
                <th>Status</th>
                <th>Location</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DateRequest</td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td>@item.AvailabilityFrom</td>
                    <td>@item.AvailabilityTo</td>
                    <td>@item.PointsEarned</td>
                    <td>@item.Status</td>
                    <td>@item.LocationName</td>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>