@model IEnumerable<portfolio2.Models.RequestViewModel>

<div class="table-responsive">
    @if (ViewData["MyRequestEmpty"] == null)
    {
        <table id="viewRequests" class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Title</th>
                    <th>Start Time</th>
                    <th>Hours</th>
                    <th>Participants</th>
                    <th>Points</th>
                    <th>Location</th>
                    <th>Requester</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DateRequest</td>
                        <td>@item.Description</td>
                        <td>@item.Title</td>
                        <td>@item.AvailabilityFrom</td>
                        <td>@item.Hours</td>
                        <td>@item.CurrCap/@item.MaxCap</td>
                        <td>@item.PointsEarned</td>
                        <td>@item.LocationName</td>
                        <td>@item.Name</td>
                        <td>
                            @if (item.StudentID == Convert.ToInt32(Context.Session.GetInt32("StudentID")))
                            {
                                /*<a asp-action="EditRequest" asp-controller="Student" asp-route-id="@item.RequestID">Edit</a>*/
                                DateTime currenttime = DateTime.Now;
                                TimeSpan ts = item.AvailabilityFrom - currenttime;
                                double hours = ts.TotalHours;
                                if ( hours > 72)
                                {
                                    <a asp-action="DeleteRequest" asp-controller="Student" asp-route-id="@item.RequestID">Delete</a>
                                }
                            }
                            @if (item.StudentID != Convert.ToInt32(Context.Session.GetInt32("StudentID")))
                            {
                                <a asp-action="JoinRequest" asp-controller="Student" asp-route-id="@item.RequestID">Join</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <img src="~/images/Icons/question_mark.png" />
        <h1>@ViewData["MyRequestEmpty"]</h1>
        <p class="text-muted">You might want to create a request first..?</p>
    }
</div>

