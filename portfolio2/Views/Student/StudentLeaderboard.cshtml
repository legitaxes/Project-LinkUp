@model portfolio2.Models.StudentDetails

@{
    ViewData["Title"] = "Student Leaderboard";
    if (Context.Session.GetInt32("StudentID") != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_SignInLayout.cshtml";
    }
}
@{
    var getlist = ViewBag.list as IEnumerable<portfolio2.Models.StudentDetails>;
}

<script src="https://cdn.jsdelivr.net/npm/bubbly-bg@0.2.3/dist/bubbly-bg.js"></script>
<script>bubbly();</script>


<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Leaderboard</h2>

            <h6 class="card-subtitle mb-2 text-muted">View all tutors/students' points here!</h6>

            <div>
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Rank</th>
                            <th scope="col">Photo</th>
                            <th scope="col">Name</th>
                            <th scope="col">Total points</th>
                            <th scope="col">View profile</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int counter = 1; }
                        @foreach (var item in getlist)
                        {
                            string topthree = "class='table-info'";
                            @if (counter == 1)
                            {
                                topthree = "class='table-success'";
                            }
                            else if (counter == 2)
                            {
                                topthree = "class='table-warning'";
                            }
                            else if(counter == 3)
                            {
                                topthree = "class='table-danger'";
                            }
                            <tr @Html.Raw(topthree)>
                                <td scope="row">@counter</td>
                                @if (item.Photo != "")
                                {
                                    <td><img src="~/images/Profilepictures/@item.Photo" style="width:50px"></td>
                                }
                                else
                                {
                                    <td><img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg" alt="Profile Picture"></td>
                                }
                                <td>@item.Name</td>
                                <td>@item.Points</td>
                                <td><a asp-action="ProfileDetails" asp-controller="Student" asp-route-id="@item.StudentNumber" class="btn btn-info">View Profile</a></td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
