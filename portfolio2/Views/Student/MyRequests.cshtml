@model IEnumerable<portfolio2.Models.RequestViewModel>

@{
    ViewData["Title"] = "My Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var getlist = ViewBag.list as IEnumerable<portfolio2.Models.JoinedRequests>;
}

<section class="title">
    <div class="container myrequestsheader">
        <div class="text-center">
            <p class="h1">My Requests</p>
            <p class="font-weight-light">View all your created requests here!</p>
        </div>

    </div>
</section>


<div class="container">
    <div class="card">
        <h5 class="card-header text-center">My Requests</h5>
        <div class="card-body">
            <partial name="~/Views/Student/_ViewRequests.cshtml" model="@Model" />
        </div>
    </div>
</div>

<div class="container">
    <div class="card">
        <h5 class="card-header text-center">Joined Requests</h5>
        <div class="card-body">
            @if (ViewData["JoinedRequestEmpty"] == null) //if its null, that means it is not empty
            {
            <table id="viewRequests" class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Request Number</th>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Hours</th>
                        <th>Points earnable</th>
                        <th>Location</th>
                        <th>Category</th>
                        @*<th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var joinedrequest in getlist)
                    {
                    <tr>
                        <td>@joinedrequest.RequestID</td>
                        <td>@joinedrequest.DateRequest</td>
                        <td>@joinedrequest.Title</td>
                        <td>@joinedrequest.Hours</td>
                        <td>@joinedrequest.PointsEarned</td>
                        <td>@joinedrequest.LocationName</td>
                        <td>@joinedrequest.CategoryName</td>
                        @*<td>
                            @{ 
                                DateTime currenttime = DateTime.Now;
                                TimeSpan ts = joinedrequest.AvailabilityFrom - currenttime;
                                double hours = ts.TotalHours;
                                if (hours > 72)
                                {
                                <a asp-action="LeaveRequest" asp-controller="Student" asp-route-id="@joinedrequest.RequestID">Leave</a>
                                }
                             }
                        </td>*@
                    </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <div class="text-center">
                    <img src="~/images/Icons/question_mark.png" width="300"/>
                    <h1>@ViewData["JoinedRequestEmpty"]</h1>
                    <p class="text-muted">You might want to browse for request..?</p>

                </div>
                
            }
        </div>
    </div>
</div>

    




