@model portfolio2.Models.StudentPhoto

@{
    ViewData["Title"] = "Photo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Profile Photo</h2>

<form asp-action="Photo" enctype="multipart/form-data">
    <fieldset class="FormContent">
        <legend>Update Photo</legend>
        <input asp-for="StudentID" type="hidden" hidden readonly class="form-control" />

        <div class="form-group row">
            <label asp-for="Name"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Name" readonly
                       class="text-danger" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Photo"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                @if (Context.Session.GetString("Photo") != null)
                {
                    string imageFileName = Context.Session.GetString("Photo");
                    <img src="~/images/Profilepictures/@imageFileName" style="width:50px">
                }

                else
                {
                    <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg" style="width:50px">
                }
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FileToUpload"
                   class="col-sm-3 col-form-label">
                New Photo (jpg format)
            </label>
            <div class="col-sm-9">
                <input asp-for="FileToUpload" accept="image/jpeg" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Update" class="btn btn-primary mb1 bg-teal" />
                <span style="color:red;">@ViewData["Message"]</span>
            </div>
        </div>
        <div>
            <a class="btn btn-primary mb1 black bg-gray" href="~/Student/Details">Back</a>
        </div>
    </fieldset>
</form>
