@model IEnumerable<portfolio2.DAL.StudentTransactionViewModel>

@{
    ViewData["Title"] = "PurchaseHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="table-responsive">
    @if (ViewData["MyTransactionsEmpty"] == null)
    {
        <h2 class="text-center">Your Transaction History</h2>
        <br />
        <table id="viewRequests" class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>Photo</th>
                    <th>Item Name</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody>
                @{int counter = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td class="align-middle" style="width: 50%"><img src="~/images/Shop/@item.Photo" class="img-fluid" style="width:70px;height:70px;margin-right:20px;"></td>
                        <td>@item.ItemName</td>
                        <td>@item.Cost</td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">
            <img src="~/images/Icons/question_mark.png" width="300" />
            <h3>@ViewData["MyRequestEmpty"]</h3>
            <p class="text-muted">You have not made any purchases.</p>
        </div>

    }
</div>

