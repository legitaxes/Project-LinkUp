@model portfolio2.Models.Shop

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var getlist = ViewBag.list as IEnumerable<portfolio2.Models.Shop>;
}

<div class="container">
    <div class="card">
        <div class="card-body leaderboard-table">
            <h1 class="card-title text-center">Leaderboard</h1>

            <h6 class="card-subtitle mb-2 text-muted text-center">View all tutors/students' points here!</h6>

            <div class="leaderboard-table">
                <table class="table table-striped table-hover table-light table-responsive-md">
                    <thead class="thead-light">
                        <tr>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Cost</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in getlist)
                        {
                        <tr>
                            <td class="align-middle" style="width: 50%"><img src="~/images/Shop/@item.Photo" class="img-fluid" style="width:70px;height:70px;margin-right:20px;"></td>
                            <td class="align-middle">@item.ItemName</td>
                            <td class="align-middle">@item.ItemDescription</td>
                            <td class="align-middle">@item.Cost</td>
                            @{int points = Convert.ToInt32(ViewData["StudentPoints"]);}
                            @if (points > item.Cost)
                            {
                                <td class="align-middle"><a asp-action="Purchase" asp-controller="Shop" asp-route-id="@item.ItemID" class="btn btn-primary">Purchase</a></td>
                            }
                            else
                            {
                            <td>Insufficient Points</td>
                            }
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
